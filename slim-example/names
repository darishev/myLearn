<?php

class user
{
    public $name = "name";
    public $password= "pass";
    public $email= "mail";
    public $city= "city";


    private static $name;
    public static function setName($name1)
    {
        self::$name = $name1;
    }

    public static function getName()
    {
        return self::$name;

    }




}

User::setName('ivan');
echo User::getName();


class testP
{
    public static $name;
    public static function hello(){
        echo "Hello" .self::$name."";
    }
}

testP::$name="Alexey";
echo testP::$name;
testP::hello();


